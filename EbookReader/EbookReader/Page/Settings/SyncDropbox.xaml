<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EbookReader.Page.Settings.SyncDropbox"
             xmlns:vw="clr-namespace:Xam.Plugin.WebView.Abstractions;assembly=Xam.Plugin.WebView.Abstractions">
    <ContentPage.Content>
        <StackLayout>
            <vw:FormsWebView ContentType="Internet"
                             Source="{Binding Url}"
                             x:Name="AuthWebView"
                             VerticalOptions="FillAndExpand"
                             HorizontalOptions="FillAndExpand"
                             OnNavigationStarted="AuthWebView_OnNavigationStarted"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>